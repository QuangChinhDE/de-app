{
  "name": "node-playground",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace apps/web\" \"npm run dev --workspace apps/server\"",
    "dev:web": "npm run dev --workspace apps/web",
    "dev:server": "npm run dev --workspace apps/server",
    "build": "npm run build --workspace apps/web && npm run build --workspace apps/server",
    "lint": "npm run lint --workspace apps/web",
    "start": "npm run start --workspace apps/server"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.4.0"
  }
}
